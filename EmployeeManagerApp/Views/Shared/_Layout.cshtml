﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagerApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EPMS.PresentationLayer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.2/dist/bootstrap-table.min.css" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-table@1.23.2/dist/bootstrap-table.min.js"></script>
</head>

<body>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3 col-xl-2 px-0 border border-1 border-dark">
                    <div class="d-flex flex-column align-items-center align-items-sm-start min-vh-100">
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 w-100" id="menu">
                            <li class="nav-item border-bottom border-1 border-dark w-100">
                                <a asp-controller="Home" asp-action="Index" class="nav-link align-middle px-2 text-decoration-none text-dark">
                                    <i class="fa fa-home" style="font-size:28px"></i>
                                    <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li class="nav-item border-bottom border-1 border-dark w-100">
                                <a asp-controller="Employee" asp-action="Index" class="nav-link align-middle px-2 text-decoration-none text-dark">
                                    <i class="fa fa-user" style="font-size:28px"></i>
                                    <span class="ms-2 d-none d-sm-inline">Employees</span>
                                </a>
                            </li>
                            <li class="nav-item border-bottom border-1 border-dark w-100">
                                <a asp-controller="Employee" asp-action="Create" class="nav-link align-middle px-2 text-decoration-none text-dark">
                                    <svg style="height:26px;width:26px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"> <path d="M336 352c97.2 0 176-78.8 176-176S433.2 0 336 0S160 78.8 160 176c0 18.7 2.9 36.8 8.3 53.7L7 391c-4.5 4.5-7 10.6-7 17v80c0 13.3 10.7 24 24 24h80c13.3 0 24-10.7 24-24V448h40c13.3 0 24-10.7 24-24V384h40c6.4 0 12.5-2.5 17-7l33.3-33.3c16.9 5.4 35 8.3 53.7 8.3zM376 96a40 40 0 1 1 0 80 40 40 0 1 1 0-80z" /></svg>
                                    <span class="ms-1 d-none d-sm-inline">Add Employee</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col px-0">
                    @RenderBody()
                </div>
            </div>
        </div>
    </header>

    <footer class="border-top border-1 border-dark footer text-center">
        <div class="container pt-4">
            Copyright 2024
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>